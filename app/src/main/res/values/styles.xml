<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewContainer" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CardViewContainer.ShapeAppearance</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CardViewContainer.ShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CardViewFavorite" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CardViewFavorite.ShapeAppearance</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CardViewFavorite.ShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>
</resources>